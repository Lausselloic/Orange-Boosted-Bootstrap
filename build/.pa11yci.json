{
  "standard": "WCAG2AAA",
  "level": "error",
  "defaults": {
    "chromeLaunchConfig": {
        "args": [
            "--no-sandbox"
        ]
    },
    "reporters": [
      "cli",
      ["json", { "fileName": "./pa11y-ci-results.json" }]
    ],
    "runners": [
      "axe"
    ],
    "useIncognitoBrowserContext": false,
    "hideElements": ".d-none, iframe, #text-decoration + p + div a.text-decoration-none, #offcanvas, #offcanvasDark, #offcanvasResponsive, #bdSidebar",
    "ignore": [
      "color-contrast"
    ]
  }
}
