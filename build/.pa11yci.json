{
  "level": "error",
  "concurrency": 4,
  "defaults": {
    "chromeLaunchConfig": {
        "args": [
            "--no-sandbox"
        ]
    },
    "reporters": [
      "cli",
      ["json", { "fileName": "./pa11y-ci-results.json" }]
    ],
    "runners": [
      "axe"
    ],
    "useIncognitoBrowserContext": false,
    "hideElements": "iframe, a.text-decoration-none, #offcanvas, #offcanvasDark, #offcanvasResponsive",
    "ignore": [
      "heading-order",
      "scrollable-region-focusable",
      "color-contrast"
    ]
  }
}
